<assembly>
	<id>Application</id>
	<formats>
		<format>zip</format>
		<format>dir</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>

		<!-- ==================== Copying file structure ================= -->
		<fileSet>
			<directory>${project.basedir}/src/main/resources/application
			</directory>
			<outputDirectory>
			</outputDirectory>
			<excludes>
				<exclude>*.pdf</exclude>
			</excludes>
		</fileSet>

		<!-- ==================== Copying domibusConnectorClientStarter library ================= -->
		<fileSet>
			<directory>${project.basedir}/domibusConnectorClientStarter/target/
			</directory>
			<outputDirectory>bin
			</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
			<excludes>
				<exclude>*-sources.jar</exclude>
				<exclude>*-javadoc.jar</exclude>
			</excludes>
		</fileSet>
		
		<!-- ==================== Copying site documentation ================= -->
		<fileSet>
			<directory>${project.basedir}/target/site/
			</directory>
			<outputDirectory>documentation/site
			</outputDirectory>
		</fileSet>

	</fileSets>
</assembly>