<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO" monitor="10" >

	<Properties>
<!--
		<Property name="basePath">/node0/products/execconq/web/apache-tomcat-8.5.31_execconq/logs/connector/</Property>
-->
		<Property name="basePath">/logs/connector/</Property>

		<Property name="PID">????</Property>
		<!-- <Property name="LOG_EXCEPTION_CONVERSION_WORD">%xwEx</Property> -->
        <Property name="LOG_EXCEPTION_CONVERSION_WORD_COLOR">%xEx{full}{ansi}</Property>
        <Property name="LOG_EXCEPTION_CONVERSION_WORD">%xEx{full}</Property>

		<Property name="LOG_LEVEL_PATTERN">%5p</Property>
		<Property name="LOG_DATEFORMAT_PATTERN">yyyy-MM-dd HH:mm:ss.SSS</Property>
		<Property name="CONN_CONSOLE_LOG_PATTERN">%style{%d{${LOG_DATEFORMAT_PATTERN}}}{faint} %highlight{${LOG_LEVEL_PATTERN}} %style{${sys:PID}}{magenta} %clr{---}{faint} [tid=%38.-38X{messageid}] [processor=%20.-20X{message_processor}] %clr{[%15.15t]}{faint} %style{%-40.40c{1.}}{cyan} %clr{:}{faint} %m%n${sys:LOG_EXCEPTION_CONVERSION_WORD_COLOR}</Property>
		<Property name="DEBUG_CONN_FILE_LOG_PATTERN">%d{${LOG_DATEFORMAT_PATTERN}} ${LOG_LEVEL_PATTERN} ${sys:PID} --- %40.-40location--- [tid=%64.-64X{messageid}] [%t] %-40.40c{1.} : %m%n${sys:LOG_EXCEPTION_CONVERSION_WORD}</Property>
		<Property name="NORMAL_CONN_FILE_LOG_PATTERN">%d{${LOG_DATEFORMAT_PATTERN}} ${LOG_LEVEL_PATTERN} ${sys:PID} --- [tid=%64.-64X{messageid}] [%t] %-40.40c{1.} : %m%n${sys:LOG_EXCEPTION_CONVERSION_WORD}</Property>
		<Property name="CONN_FILE_LOG_PATTERN">${DEBUG_CONN_FILE_LOG_PATTERN}</Property>
	</Properties>

    <Appenders>
		
		<RollingFile name="Business" fileName="${basePath}/business.log" filePattern="${basePath}/business-%d{yyyy-MM-dd}.log">
			<MarkerFilter marker="BUSINESS" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="${sys:CONN_FILE_LOG_PATTERN}" />
            <Policies>
				<SizeBasedTriggeringPolicy size="10M" />
            </Policies>
        </RollingFile>
	
		<RollingFile name="File" fileName="${basePath}/connector.log" filePattern="${basePath}/connector-%d{yyyy-MM-dd}.log">
            <PatternLayout pattern="${sys:CONN_FILE_LOG_PATTERN}" />
            <Policies>
				<SizeBasedTriggeringPolicy size="10M" />
            </Policies>
        </RollingFile>
	
        <Console name="Console" target="SYSTEM_OUT" follow="true">
            <!-- <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] [msgid=%X{messageid}] %-5level %logger{36} - %msg%n" /> -->
            <PatternLayout pattern="${sys:CONN_CONSOLE_LOG_PATTERN}" />
        </Console>
    </Appenders>
    <Loggers>
        <Root level="INFO" additivity="false">
            <AppenderRef ref="Console" />		
			<AppenderRef ref="File" />			
        </Root>
		
		<!--
        <Logger name="org.liquibase" level="info"  >
            <AppenderRef ref="Console" />
			<AppenderRef ref="File" />
        </Logger>
		<Logger name="org.hibernate" level="info" additivity="false">
            <AppenderRef ref="Console" />
			<AppenderRef ref="File" />
        </Logger>
		-->
		
        
        <!-- <Logger name="org.apache.cxf" level="TRACE" additivity="false">
            <AppenderRef ref="Console" />
			<AppenderRef ref="File" />
        </Logger>
        <Logger name="org.apache.wss4j" level="TRACE" additivity="false">
            <AppenderRef ref="Console" />
			<AppenderRef ref="File" />
        </Logger> -->
        <!--
        <Logger name="org.apache.jcp" level="TRACE" additivity="false">
            <AppenderRef ref="Console" />
			<AppenderRef ref="File" />
        </Logger>
        -->
        <Logger name="eu.domibus.connector" level="DEBUG" additivity="false">
            <AppenderRef ref="Console" />
			<AppenderRef ref="Business" />
			<AppenderRef ref="File" />
        </Logger>

		<!--
		<Logger name="eu.domibus.connector.persistence" level="TRACE" additivity="false">
            <AppenderRef ref="Console" />
			<AppenderRef ref="File" />
        </Logger>
		-->
        	
    </Loggers>
</Configuration>
