<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.1.1"
		  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		  xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.1.1 https://maven.apache.org/xsd/assembly-2.1.1.xsd">
	<id>client-libs-doc</id>
	<formats>
		<format>zip</format>
		 <format>dir</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>

	<fileSets>
		<fileSet>
			<directory>target/generated-docs/doc/client-libs</directory>
			<outputDirectory>doc/client-libs</outputDirectory>
			<includes>
				<include>*/**</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>target/generated-docs/changelog</directory>
			<outputDirectory>doc</outputDirectory>
			<includes>
				<include>*/**</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>