<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<!-- This XML files is the spring application context. For general informations on Spring, please see the spring documentation. -->

<beans>

	<!-- The import of the DomibusConnectorController context leads to the initialization of the framework context and triggers the timer jobs. -->
	<import	resource="classpath:/spring/context/DomibusConnectorControllerContext.xml" />

	<!-- This loads all the property files containing the needed properties to be injected. -->
	<bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="ignoreUnresolvablePlaceholders" value="true" />
		<property name="locations">
			<list>
				<value>file:${connector.properties}</value>
			</list>
		</property>
	</bean>
	
	<!-- This initializes logging. -->
	<bean id="log4jInitializer" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
		<property name="staticMethod">
			<value>org.springframework.util.Log4jConfigurer.initLogging</value>
		</property>
		<property name="arguments">
			<list>
				<value>file:${logging.properties}</value>
			</list>
		</property>
	</bean>
	
	<bean id="connectorRunnableUtil" class="eu.domibus.connector.runnable.util.DomibusConnectorRunnableUtil">
		<property name="persistenceService" ref="persistenceService" />
	</bean>
	
	<!-- <bean id="connectorUI" class="eu.domibus.connector.gui.DomibusConnectorUI" init-method="init" /> -->
	
</beans>