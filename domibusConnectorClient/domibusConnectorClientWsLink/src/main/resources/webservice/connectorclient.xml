<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:jaxws="http://cxf.apache.org/jaxws"
    xmlns:wsp="http://www.w3.org/ns/ws-policy"
    xmlns:p="http://cxf.apache.org/policy"
    xmlns:cxf="http://cxf.apache.org/core"

    xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd 
http://docs.oasis-open.org/ws-sx/ws-securitypolicy/200802 http://docs.oasis-open.org/ws-sx/ws-securitypolicy/v1.3/cd/ws-securitypolicy.xsd
http://www.w3.org/ns/ws-policy https://www.w3.org/2007/02/ws-policy.xsd
http://cxf.apache.org/policy http://cxf.apache.org/schemas/policy.xsd
http://cxf.apache.org/core http://cxf.apache.org/schemas/core.xsd "
>
    <!-- 
        configure connection to domibusConnector
    -->

    
    <cxf:bus>
        <cxf:features>
            <p:policies/>
            <cxf:logging/>
        </cxf:features>
    </cxf:bus>
    
    <bean id="encryptProperties"
          class="org.springframework.beans.factory.config.PropertiesFactoryBean">
        <property name="properties">
            <props>
                <prop key="org.apache.ws.security.crypto.provider">org.apache.wss4j.common.crypto.Merlin</prop>
                <prop key="org.apache.ws.security.crypto.merlin.keystore.type">jks</prop>
                <prop key="org.apache.ws.security.crypto.merlin.keystore.password">12345</prop>
                <prop key="org.apache.ws.security.crypto.merlin.keystore.file">domibusClient.jks</prop>
            </props>
        </property>
    </bean>
    
    
    <jaxws:client id="backendClient"
                serviceClass="eu.domibus.connector.ws.backend.webservice.DomibusConnectorBackendWebService"
                address="${connector.backend.ws.address}" >
         
         <jaxws:properties>
<!--            <entry key="security.username" value="bob" />
            <entry key="security.password" value="test" />            -->
            <entry key="security.encryption.properties" value-ref="encryptProperties"  />
            <entry key="security.signature.properties" value-ref="encryptProperties" />
            <entry key="security.encryption.username" value="connector" />
            <entry key="security.signature.username" value="${ws.backendclient.name}" />                                    
         </jaxws:properties>
         
         <jaxws:features>
            <p:policies>
                <wsp:PolicyReference URI="classpath:/wsdl/backend.policy.xml"/>
            </p:policies>
        </jaxws:features>
         
     </jaxws:client>
     
     
    

</beans>
