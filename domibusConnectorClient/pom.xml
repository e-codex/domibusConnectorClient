<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>eu.domibus.connector-client</groupId>
    <artifactId>domibusConnectorClient</artifactId>
    <version>4.1.0-SNAPSHOT</version>
    <name>domibusConnectorClient</name>
    <description>Project for developing the client for the domibusConnectorWebApp.</description>
    <packaging>pom</packaging>

    <properties>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <connector-server.version>4.1.0-RELEASE</connector-server.version>
        <org.apache.cxf.version>3.2.1</org.apache.cxf.version>
    </properties>

    <modules>
        <module>domibusConnectorClientRunnable</module>
        <module>domibusConnectorClientLibrary</module>
        <module>domibusConnectorClientDistribution</module>
        <module>domibusConnectorClient35Library</module>
        <module>domibusConnectorClientWsLink</module>
        <module>domibusConnectorClientScheduler</module>
        <module>domibusConnectorClientTestModules</module>
        <module>domibusConnectorClientWebLib</module>
        <module>domibusConnectorClientWebRest</module>
        <module>domibusConnectorClientApi</module>
        <module>domibusConnectorClientWebRestAngularUI</module>
    </modules>


    <dependencyManagement>
        <dependencies>
            <dependency>
                <!-- import dependencies via dependency Management from webConnector 4.x -->
                <groupId>eu.domibus.connector</groupId>
                <artifactId>domibusConnector</artifactId>
                <version>${connector-server.version}</version>
                <scope>import</scope>
                <type>pom</type>
            </dependency>
            <dependency>
                <groupId>eu.domibus.connector</groupId>
                <artifactId>domibusConnectorAPIlib</artifactId>
                <version>${connector-server.version}</version>
            </dependency>
            <dependency>
                <groupId>eu.domibus.connector-client</groupId>
                <artifactId>domibusConnectorClientLibrary</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>eu.domibus.connector-client</groupId>
                <artifactId>domibusConnectorClientWsLink</artifactId>
                <version>${project.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <distributionManagement>
        <repository>
            <id>${releases-repo.id}</id>
            <url>${releases-repo.url}</url>
        </repository>
        <snapshotRepository>
            <id>${snapshots-repo.id}</id>
            <url>${snapshots-repo.url}</url>
        </snapshotRepository>
    </distributionManagement>

    <scm>
        <developerConnection>scm:git:https://secure.e-codex.eu/gitblit/r/Me-CODEX/domibusConnectorClient.git
        </developerConnection>
    </scm>
    <ciManagement>
        <system>Jenkins</system>
        <url>https://secure.e-codex.eu/jenkins/view/domibusConnector/job/WebConnectorSuiteFolder/job/ConnectorClient/
        </url>
    </ciManagement>

    <build>

        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.cxf</groupId>
                    <artifactId>cxf-codegen-plugin</artifactId>
                    <version>${org.apache.cxf.version}</version>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-site-plugin</artifactId>
                    <version>3.3</version>
                </plugin>
            </plugins>
        </pluginManagement>

        <plugins>
            <plugin>
                <groupId>com.github.ferstl</groupId>
                <artifactId>depgraph-maven-plugin</artifactId>
                <version>3.1.0</version>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.3.2</version>
                <configuration>
                    <encoding>${project.build.sourceEncoding}</encoding>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <version>2.4.3</version>
                <configuration>
                    <encoding>${project.build.sourceEncoding}</encoding>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-site-plugin</artifactId>
            </plugin>

        </plugins>
    </build>

</project>
