<assembly>
	<id>${project.version}-Standalone</id>
	<formats>
		<format>zip</format>
		<format>dir</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>

		<!-- ==================== Copying JAR files ================= -->
		<fileSet>
			<directory>${project.basedir}/../domibusConnectorClientRunnable/target/
			</directory>
			<outputDirectory>/bin
			</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
			<excludes>
				<exclude>*-sources.jar</exclude>
			</excludes>
		</fileSet>

		<!-- ==================== Copying dependency libraries ================= -->
		<fileSet>
			<directory>${project.basedir}/../domibusConnectorClientRunnable/target/lib/
			</directory>
			<outputDirectory>/lib
			</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
		</fileSet>

		<!-- ==================== Copying startup scripts ================= -->
		<fileSet>
			<directory>${project.basedir}/../domibusConnectorClientRunnable/src/startupScripts
			</directory>
			<outputDirectory>/
			</outputDirectory>
		</fileSet>

		<!-- ==================== Copying conf ================= -->
		<fileSet>
			<directory>${project.basedir}/src/main/resources/conf/
			</directory>
			<outputDirectory>/conf
			</outputDirectory>
		</fileSet>

		<!-- ==================== Creating empty messages folders ================= -->
		<fileSet>
			<directory>./</directory>
			<outputDirectory>/messages/incoming
			</outputDirectory>
			<excludes>
				<exclude>*/**</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>./</directory>
			<outputDirectory>/messages/outgoing
			</outputDirectory>
			<excludes>
				<exclude>*/**</exclude>
			</excludes>
		</fileSet>

	</fileSets>
	<!-- <files>
		<file>
			<source>${project.basedir}/src/main/resources/documentation/domibusConnectorClient_Guide.docx
			</source>
			<outputDirectory>/documentation
			</outputDirectory>
		</file>
	</files> -->
</assembly>