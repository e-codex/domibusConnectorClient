<assembly>
	<id>${project.version}-Standalone</id>
	<formats>
		<format>zip</format>
		<format>dir</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		
		<!-- ==================== Copying JAR files ================= -->
		<fileSet>
			<directory>${project.basedir}/../domibusConnectorClientRunnable/target/
			</directory>
			<outputDirectory>${connector.build.dir}bin
			</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
			<excludes>
				<exclude>*-sources.jar</exclude>
			</excludes>
		</fileSet>
		
		<!-- ==================== Copying dependency libraries ================= -->
		<fileSet>
			<directory>${project.basedir}/../domibusConnectorClientRunnable/target/lib/
			</directory>
			<outputDirectory>${lib.output.dir}
			</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
		</fileSet>
		
		<!-- ==================== Copying startup scripts ================= -->
		<fileSet>
			<directory>${project.basedir}/../domibusConnectorClientRunnable/src/startupScripts
			</directory>
			<outputDirectory>${connector.build.dir}
			</outputDirectory>
		</fileSet>
		
		<!-- ==================== Copying conf ================= -->
		<fileSet>
			<directory>${project.basedir}/src/main/resources/
			</directory>
			<outputDirectory>${connector.build.dir}
			</outputDirectory>
		</fileSet>

		<!-- ==================== Creating empty messages folders ================= -->
		<fileSet>
			<directory>./</directory>
			<outputDirectory>${connector.build.dir}messages/incoming</outputDirectory>
			<excludes>
				<exclude>*/**</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>./</directory>
			<outputDirectory>${connector.build.dir}messages/outgoing</outputDirectory>
			<excludes>
				<exclude>*/**</exclude>
			</excludes>
		</fileSet>
		
	</fileSets>
