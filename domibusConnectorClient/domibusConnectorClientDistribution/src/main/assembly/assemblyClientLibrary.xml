<assembly>
	<id>${project.version}-Libraries</id>
	<formats>
		<format>zip</format>
		<format>dir</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		
		<!-- ==================== Copying JAR files ================= -->
		<fileSet>
			<directory>${project.basedir}/../domibusConnectorClientLibrary/target/
			</directory>
			<outputDirectory>/libraries
			</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
			<excludes>
				<exclude>*-sources.jar</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/../domibusConnectorClientWebLib/target/
			</directory>
