			<outputDirectory>/libraries
			</outputDirectory>
			<includes>
				<include>domibusConnectorAPI*.jar</include>
			</includes>
		</fileSet>
		
		
		
		<!-- ==================== Copying conf ================= -->
		<fileSet>
			<directory>${project.basedir}/src/main/resources/conf/
